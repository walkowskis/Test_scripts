import unittest
from selenium import webdriver


login = ""
pwd = ""

class MainTests(unittest.TestCase):
    def setUp(self):
        options = webdriver.ChromeOptions()
        options.add_argument('headless')
        self.driver = webdriver.Chrome(options=options)
        self.driver.implicitly_wait(10)
        self.driver.maximize_window()
        self.driver.get('https://portalpacjenta.luxmed.pl/PatientPortal/Account/LogOn')

    def test_login(self):
        self.driver.find_element_by_id('Login').send_keys(login)
        self.driver.find_element_by_xpath('//*[@id="TempPassword"]').click()
        self.driver.find_element_by_xpath('//*[@id="Password"]').send_keys(pwd)
        self.driver.execute_script('submitLogin()')
        self.assertEqual(self.driver.current_url, 'https://portalpacjenta.luxmed.pl/PatientPortal/', 'Login Fail:')

    def test_pass_fail(self):
        self.driver.find_element_by_id('Login').send_keys(login)
        self.driver.find_element_by_xpath('//*[@id="TempPassword"]').click()
        self.driver.execute_script('submitLogin()')
        self.assertEqual(self.driver.current_url, 'https://portalpacjenta.luxmed.pl/PatientPortal/Account/LogOn', 'Login Fail:')

    def test_login_fail(self):
        self.driver.find_element_by_xpath('//*[@id="TempPassword"]').click()
        self.driver.find_element_by_xpath('//*[@id="Password"]').send_keys(pwd)
        self.driver.execute_script('submitLogin()')
        self.assertEqual(self.driver.current_url, 'https://portalpacjenta.luxmed.pl/PatientPortal/Account/LogOn', 'Login Fail:')

    def tearDown(self):
        self.driver.quit()


if __name__ == '__main__':
    unittest.main()
